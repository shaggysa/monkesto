{
  "format_on_save": "on",
  "languages": {
    "Rust": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "leptosfmt",
          "arguments": ["--stdin", "--rustfmt"]
        }
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
          "arguments": ["--features=ssr", "--offline"]
        },
        "diagnostics": {
          "experimental": "true",
          "disabled": ["unresolved-import", "macro-error"]
        },
        "cargo": {
          "features": ["ssr"],
          "buildScripts": {
            "enable": false
          },
          "offline": true
        },
        "procMacro": {
          "enable": true,
          "ignored": {
            "sqlx": ["Type"]
          }
        },
        "rustfmt": {
          "overrideCommand": ["leptosfmt", "--stdin", "--rustfmt"]
        }
      }
    }
  }
}
