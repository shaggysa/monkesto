{
  "format_on_save": "on",
  "languages": {
    "Rust": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "leptosfmt",
          "arguments": ["--rustfmt", "{buffer_path}"]
        }
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
          "arguments": ["--features=ssr"]
        },
        "diagnostics": {
          "experimental": "true"
        },
        "cargo": {
          "features": ["ssr"]
        }
      }
    }
  }
}
