{
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
          "arguments": ["features=ssr"]
        },

        "diagnostics": {
          "experimental": "true"
        },

        "cargo": {
          "features": ["ssr"] // allows the linter to work with ssr dependant code
        }
      }
    }
  }
}
